
<div class="row">
    <div class="col s4 m3">
    <div class="card blue-grey darken-1">
    <div class="card-content white-text">
        <h1 class="card-title"><%= @recipe.title %></h1>
            <h3>This Recipe was Created by: <%= @recipe.creator %></h3>

            <p style="color: blue;"><%= @recipe.food_type %></p>

            <p><%= @recipe.description %></p>

        <ul>
            <li>Duration: <%= @recipe.duration %></li>
            <li>Rating: <%= @recipe.rating %> stars</li>
        </ul>

        <div class="card-action">
        <%= link_to 'Edit Recipe', edit_recipe_path(@recipe) %>
        <%= link_to 'Delete Recipe', recipe_path(@recipe), method: :delete %>
        </div>
  </div>
</div>
</div>
